@{
    ViewData["Title"] = "Home of Gods";
}


<div class="container text-center" id="containerdelCarousel">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <!-- Nav-bar -->
        <!-- Carrousel -->
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/images/index_banner.jpg" alt="BEST Game" height="500">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/index_banner2.jpg" alt="BEST PLAYER" height="500">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/index_banner3.jpg" alt="SPEEDRUN PEOPLE" height="500">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="false"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="false"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>


    <div style="background-color: #174774">
        <div class="cover-container d-flex h-100 p-3 mx-auto flex-column">
            <main role="main" class="inner cover" id="textinfo">
                <h1 class="cover-heading">God Runner</h1>
                <p class="lead">God Runner is a randomly generated action-RPG shooter with strong roguelike elements. Players will find rare treasures that change superhuman abilities that allow them to face hordes of mysterious creatures, uncover secrets, and fight their way to safety..</p>
                <p class="lead">
                    <a class="btn btn-lg btn-secondary" href="/Inkesta/Index">Inquest</a>
                </p>
            </main>
        </div>
    </div>

</div>